{
  "version": "2.0.0",
  "tasks": [
    // Development Tasks
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Start development server with auto-reload"
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "npm run type-check",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run TypeScript type checking without compilation"
    },
    // Database Tasks
    {
      "label": "Run Database Migrations",
      "type": "shell",
      "command": "npm run db:migrate",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run pending database migrations"
    },
    {
      "label": "Rollback Last Migration",
      "type": "shell",
      "command": "npm run db:migrate:down",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Rollback the last applied migration"
    },
    {
      "label": "Create New Migration",
      "type": "shell",
      "command": "npm run db:create-migration",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Create a new database migration file"
    },
    {
      "label": "Generate TypeScript Types",
      "type": "shell",
      "command": "npm run db:generate-types",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Generate TypeScript types from database schema"
    },
    {
      "label": "Seed Database",
      "type": "shell",
      "command": "npm run db:seed",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Populate database with sample data"
    },
    // Testing & Demo Tasks
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run all tests once"
    },
    {
      "label": "Run Tests (Watch Mode)",
      "type": "shell",
      "command": "npm run test:watch",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run tests in watch mode (auto-rerun on changes)"
    },
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "command": "npm run test:unit",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run unit tests only (excludes integration tests)"
    },
    {
      "label": "Run Integration Tests",
      "type": "shell",
      "command": "npm run test:integration",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Run integration tests only (excludes unit tests)"
    }
  ]
}
